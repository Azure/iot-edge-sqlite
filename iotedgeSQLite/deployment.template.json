{
  "moduleContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {}
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": ""
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"8883/tcp\":[{\"HostPort\":\"8883\"}],\"443/tcp\":[{\"HostPort\":\"443\"}]}}}"
            }
          }
        },
        "modules": {
          "sqlite": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.iotedgeSQLite.amd64}",
              "createOptions": "{\"HostConfig\":{\"Binds\":[\"<Path To Host Database Directory>:<Path To Container Database Directory>\"]}}"
            }
          },
          "tempSensor": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-simulated-temperature-sensor:1.0",
              "createOptions": ""
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "iotedgeSQLiteToIoTHub": "FROM /messages/modules/sqlite/outputs/sqliteOutput INTO $upstream",
          "tempSensorToiotedgeSQLite": "FROM /messages/modules/tempSensor/outputs/temperatureOutput INTO BrokeredEndpoint(\"/modules/sqlite/inputs/input1\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "sqlite": {  
      "properties.desired":{
        "SQLiteConfigs":"true",
        "DbPath": "<Path To Host Database File>",
        "TableName": "test",
        "Columns": {
          "Column01":{
            "Name": "Id",
            "Type": "numeric",
            "IsKey": "true",
            "NotNull": "true"
          },
          "Column02":{
            "Name": "Value",
            "Type": "numeric",
            "IsKey": "false",
            "NotNull": "true"
          }
        }
      }
    }
  }
}


